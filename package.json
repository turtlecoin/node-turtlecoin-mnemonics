{
  "name": "@turtlecoin/mnemonics",
  "version": "0.0.11",
  "description": "TurtleCoin Mnemonic Words",
  "types": "dist/mnemonics.d.ts",
  "main": "dist/mnemonics.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "docs": "./node_modules/.bin/typedoc && touch docs/.nojekyll && git restore docs/CNAME",
    "prepublishOnly": "npm test && npm run docs",
    "style": "./node_modules/.bin/eslint src/*.ts",
    "fix-style": "./node_modules/.bin/eslint --fix src/*.ts",
    "test": "npm run style && npm run build && npm run test-mocha",
    "test-mocha": "./node_modules/.bin/mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turtlecoin/node-turtlecoin-mnemonics.git"
  },
  "homepage": "https://mnemonics.turtlecoin.dev",
  "bugs": {
    "url": "https://github.com/turtlecoin/node-turtlecoin-mnemonics/issues"
  },
  "keywords": [
    "TurtleCoin",
    "Mnemonic",
    "Words"
  ],
  "author": "The TurtleCoin Developers",
  "license": "GPL-3.0",
  "dependencies": {
    "crc": "^3.8.0",
    "get-random-values": "^1.2.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "mocha": "^8.2.1",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.3"
  }
}
